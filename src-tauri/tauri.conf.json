{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "ai-spotlight-panel",
	"version": "0.1.0",
	"identifier": "com.konstantin.ai-spotlight-panel",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"label": "spotlight",
				"title": "AI Spotlight",
				"width": 680,
				"height": 68,
				"resizable": false,
				"decorations": false,
				"alwaysOnTop": true,
				"transparent": true,
				"focus": true,
				"fullscreen": false,
				"center": true,
				"visible": false,
				"skipTaskbar": true,
				"shadow": false,
				"visibleOnAllWorkspaces": true
			}
		],
		"macOSPrivateApi": true,
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": ["app", "dmg"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
